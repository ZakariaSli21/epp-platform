{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
Sign up page
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/login.css') }}"/>
{% endblock %}

{% block body %}
    <a class="menu-toggle rounded" href="#"><i class="fas fa-bars"></i></a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand"><a href="#page-top">Epp-platform</a></li>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li class="sidebar-brand"><a href="#page-top"> Hello {{ app.user.username }}</a></li>
        {% endif %}
        <li class="sidebar-nav-item"><a href="/"> Home page  </a></li>
        </ul>
    </nav>
    <section class="h-100" style="background-color: #eee;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-10">
            <div class="card rounded-3 text-black">
              <div class="row g-0">
                <div class="col-lg-6">
                  <div class="card-body p-md-5 mx-md-4">
                    <div class="text-center">
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                        style="width: 185px;" alt="logo">
                      <h4 class="mt-1 mb-3"> Epp-platform </h4>
                      <h5 class="mb-3 pb-1"> Espace Professeur </h5>
                    </div>
                    {{ form_start(registrationForm) }}
                    <p class="text-center">Please sign up</p>

                    <div class="form-outline m-5">
                    {{ form_label(registrationForm.username, 'username') }}
                    {{ form_row(registrationForm.username, {label: ' '}) }}
                    </div>

                    <div class="form-outline m-5">
                    {{ form_label(registrationForm.email, 'Email address') }}
                    {{ form_row(registrationForm.email, {label: ' '}) }}
                    </div>
                    <div class="form-outline m-5">
                      {{ form_label(registrationForm.plainPassword, 'Password') }}
                      {{ form_row(registrationForm.plainPassword, {label: ' '}) }}
                    </div>
                    <div class="text-center pt-1 mt-3 mb-5 pb-1">
                      <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Sign up</button>
                    </div>
                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">Do you have an account?</p>
                      <button onclick="location.href='/login'" type="button" class="btn btn-outline-danger">Log in</button>
                    </div>
                    {{ form_end(registrationForm) }}
                  </div>
                </div>
                <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                                <h4 class="mb-4 text-center"> Epp-platform </h4>
                                                <h4 class="mb-4 text-center"> Espace Professeur</h4>
                                                <p class="small mb-0"> Vous pouvez créer un compte via cette page. En tant que professeur, vous pouvez ajouter/éditer des classes et des notes. Vous pouvez ajouter un élève à
                                                                                la liste des élèves de votre classe. Vous pouvez aussi rajouter des commentaires et des remarques d'un élève d'une classe.
                                                                                Si vous avez oublié votre mot de passe, merci de nous contacter ou de vous rapproucher vers votre responsable hiérarchique. </p>
                                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}