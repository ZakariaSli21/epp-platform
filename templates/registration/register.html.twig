{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="h-100 gradient-form" style="background-color: #eee;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-10">
            <div class="card rounded-3 text-black">
              <div class="row g-0">
                <div class="col-lg-6">
                  <div class="card-body p-md-5 mx-md-4">

                    <div class="text-center">
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                        style="width: 185px;" alt="logo">
                      <h4 class="mt-1 mb-3"> Epp-platform </h4>
                      <h5 class="mb-3 pb-1"> Espace Professeur </h5>
                    </div>
                    {{ form_start(registrationForm) }}
                    <p class="text-center">Please sign up</p>

                      <div class="form-outline mb-4">
                       {{ form_label(registrationForm.email, 'Email address') }}
                       {{ form_row(registrationForm.email, {label: ' '}) }}
                      </div>
                      <div class="form-outline mb-1">
                       {{ form_label(registrationForm.plainPassword, 'Password') }}
                        {{ form_row(registrationForm.plainPassword, {label: ' '}) }}
                      </div>
                      <div class="text-center pt-1 mt-3 mb-5 pb-1">
                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Log
                          in</button>


                        <a class="text-muted" href="#!">Forgot password?</a>
                      </div>

                      {# If you want to control the URL the user is redirected to on success
                       <input type="hidden" name="_target_path" value="/account"> #}

                      <div class="d-flex align-items-center justify-content-center pb-4">
                        <p class="mb-0 me-2">Don't have an account?</p>
                        <button onclick="location.href='/register'" type="button" class="btn btn-outline-danger">Create new</button>
                      </div>
                      {{ form_end(registrationForm) }}

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}