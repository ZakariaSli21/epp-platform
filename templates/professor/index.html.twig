{# templates/professor/index.html.twig #}
{% extends 'professor/base.html.twig' %}

{# ... #}

{% block body %}
     <!-- Navigation-->
                <a class="menu-toggle rounded" href="#"><i class="fas fa-bars"></i></a>
                <nav id="sidebar-wrapper">
                    <ul class="sidebar-nav">
                        <li class="sidebar-brand"><a href="#page-top">Espace porfesseur</a></li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="sidebar-brand"><a href="#page-top"> Hello {{ app.user.username }}</a></li>
                        {% endif %}
                        <li class="sidebar-nav-item"><a href="/create-class"> Ajouter une classe</a></li>
                        <li class="sidebar-nav-item"><a href="/professor-add-student"> Ajouter un élève </a></li>
                        <li class="sidebar-nav-item"><a href="/students-list"> Liste des élèves </a></li>
                        <li class="sidebar-nav-item"><a href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                </nav>
     <!-- Classes -->
                 <!-- Header-->
                 <header class="masthead-prof d-flex align-items-center">
                     <div class="container px-4 px-lg-5 text-center">
                         <h1 class="mb-1">Epp-platform</h1>
                         <h2 class="mb-4">Espace Professeur</h1>
                         <h3 class="mb-5"><em> Toutes les classes que vous avez crée se trouvent dans cette page. Vous pouvez éditer une classer ou créer une
                         nouvelle ainsi qu'ajouter un élève.
                         </em></h3>
                         <a class="btn btn-primary btn-xl" href="create-class">Ajouter une classe</a>
                         <a class="btn btn-primary btn-xl" href="/professor-add-student">Ajouter un élève</a>
                     </div>
                 </header>

                 <!-- Cards -->
                {% for classe in classes %}
                    <div class="card m-4" style="width: 23rem;display: inline-block;">
                          <div class="card-body">
                            <h5 class="card-title text-center">{{ classe.name }}</h5>
                            <p class="card-text text-center">{{ classe.description }}</p>
                            <div class="text-center">
                                <a href="/class/{{ classe.id }}" class="btn btn-primary mr-1">Consulter la classe</a>
                                <a href="#" class="ml-1 btn btn-primary">Editer les données</a>
                            </div>
                            <div class="text-center m-1">
                                <a href="/edit-class-students/{{ classe.id }}" class="btn btn-primary mr-1"> Gestion des élèves  </a>
                                <a href="#" class="ml-1 btn btn-primary"> Statistique classe </a>
                            </div>
                          </div>
                    </div>
                {% endfor %}

    <!-- Footer-->
                <footer class="footer text-center" id="contact">
                    <div class="container px-4 px-lg-5">
                        <ul class="list-inline mb-5">
                            <li class="list-inline-item">
                                <a class="social-link rounded-circle text-white mr-3" href="#!"><i class="icon-social-facebook"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a class="social-link rounded-circle text-white mr-3" href="#!"><i class="icon-social-twitter"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a class="social-link rounded-circle text-white" href="#!"><i class="icon-social-github"></i></a>
                            </li>
                        </ul>
                        <p class="text-muted small mb-0">Copyright &copy; Your Website 2022</p>
                    </div>
                </footer>
{% endblock %}